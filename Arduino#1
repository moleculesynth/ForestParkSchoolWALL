//device #1 of 5 interconnected Galileos - this is MASTER1
//sketch for "input" side of Molecule Wall, 
//Forest Park School Molecule Interactive Wall
//Travis Feldman, Molecule Synth
//ADX Portland, OR - May 2014

// Order of Inputs is as follows:
//(1)Pressure Sensors -placed in series for a total of 300k??, 
//(2) Toggle Switches, 
//(3) JoyStick -4buttons, 
//(4) PhotoResistors -25K each, 
//(5) Slider Potentiometer -100K, 
//(6) Turn Knob Potentiometer -1M

#include <Wire.h>  //this tells Galileo to load the Wire library
//which is used for I2C communication 

//our inputs will not change, 
//so rather than use #define, 
//we identify them as constant

const int turnKnob (A0);
const int sliderPot (A1);
const int photoResistor (A2);
const int forceSensor (A3);

//A4 and A5 are used for I2C, A4 is data (SDA) and A5 is clock (ACL)
//Galileo will know that from the Wire library

const int joystickRight (0);
const int joystickLeft (1);
const int joystickUp (2);
const int joystickDown (3);
const int toggle1 (4);
const int toggle2 (5);
const int toggle3 (6);
const int readTurn (7);
const int readSlide (8);
const int readPhoto (9);
const int readJoy (10);
const int readTog (11);
const int readForce (12);
const int batteryLED (13);
 
 //next, here are our analog variables.
 //use the onboard ADC to convert the analog reading to a number 0-1023,
 //that number will then be used below as data to be sent to one of the 
 //other Galileo boards
 
 int force = 0; //stores the value from the force sensors
 int photo = 0; //stores the value from the photo resistors
 int slider = 0; //stored the value from the slider pot
 int turn = 0;  //stores the value from the turn knob
 
 //here are our digital variables -- we will convert combinations of 1 and 0 to a single number
 int joy1 = 0;
 int joy2 = 0;
 int joy3 = 0;
 int joy4 = 0;
 
 int tog1 = 0;
 int tog2 = 0;
 int tog3 = 0;
 
void setup ()
 {
   //Initialize the pins as INPUTS, except for the LED, which is OUTPUT
   
   pinMode(turnKnob, INPUT); //All analog pins are automatically set as INPUTS, but here they are anyways, just to be clear
   pinMode(sliderPot, INPUT);
   pinMode(photoResistor, INPUT);
   pinMode(forceSensor, INPUT);

   pinMode(joystickRight, INPUT);
   pinMode(joystickLeft, INPUT);
   pinMode(joystickUp, INPUT);
   pinMode(joystickDown, INPUT);
   pinMode(toggle1, INPUT);
   pinMode(toggle2, INPUT);
   pinMode(toggle3, INPUT);
   pinMode(readTurn, INPUT);
   pinMode(readSlide, INPUT);
   pinMode(readPhoto, INPUT);
   pinMode(readJoy, INPUT);
   pinMode(readTog, INPUT);
   pinMode(readForce, INPUT);
   pinMode(batteryLED, OUTPUT);
 }
   
//Wire.begin(1); //this assigns the number 1 to this device on the I2C bus

//}

// Our Galileo is scanning for 6 values, one from each of the input components
//which will be sent to either Galileo 3 (Motors), 4 (LEDs), or 5 (Transducer/sounds)

//byte a = analogRead(3); //force sensor
//byte b = 0; //toggle switches
//byte c = 0; //joystick
//byte d = analogRead(2); //photoresistors
//byte e = analogRead(1); //slider pot
//byte f = analogRead(0); //turn knob



//
void loop (){
  
  blinkLED (batteryLED, 100);
}
  
void blinkLED(int pin, int duration)
  {
    digitalWrite(pin, HIGH);
    delay(duration);
    digitalWrite(pin, LOW);
    delay(duration);
    

}

  //
